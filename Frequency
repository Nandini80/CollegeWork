#include <bits/stdc++.h>
using namespace std;
#define lli long long int
int main() 
{
    string s;
    cout << "Enter the paragraph : ";
    cin >> s;

    map<char,int>mp;
    for(auto i : s)
    {
        mp[i]++;
    }
    cout << "The frequency of each letter is : " << endl;
    for(auto it : mp)
    {
        cout << it.first << " " << it.second << endl;
    }
}
